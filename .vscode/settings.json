{
  // Format on save
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Run ESLint auto-fix on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // File associations
  "files.associations": {
    "*.css": "tailwindcss"
  },

  // Exclude node_modules from search
  "search.exclude": {
    "**/node_modules": true,
    "**/solidity/node_modules": true,
    "**/.next": true,
    "**/build": true,
    "**/dist": true
  }
}
